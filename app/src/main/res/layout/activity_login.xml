<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nitishbhaskar.cherrypick.LoginActivity"
    android:background="#252338">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:id="@+id/signUplayout"
        android:visibility="gone">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createAccount"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#C4C4C9" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAccount"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#C4C4C9"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/profile"
            android:padding="14dp"
            android:textSize="17sp"
            android:textColor="#C4C4C9"
            android:singleLine="true"
            android:drawableTint= "#C4C4C9"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:nextFocusDown="@+id/edit_text_password"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/createAccount"
        android:textColorHint="#C4C4C9"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/passtext"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@mipmap/passlock"
            android:singleLine="true"
            android:textColor="#C4C4C9"
            android:textColorHint="#C4C4C9"
            android:textSize="17sp"
            android:imeOptions="actionDone"
            android:padding="14dp"
            android:drawableTint= "#C4C4C9"
            android:hint="Enter your password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>


        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/createUser"
            android:layout_below="@+id/passtext"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            fancy:fb_textSize="20dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#D24958"
            fancy:fb_focusColor="#683045"
            fancy:fb_radius="10dp"
            fancy:fb_text="Create User"
            fancy:fb_textColor="#C4C4C9"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton2"
            android:layout_below="@+id/createUser"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="55dp"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            fancy:fb_textSize="20dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#D24958"
            fancy:fb_focusColor="#683045"
            fancy:fb_radius="10dp"
            fancy:fb_text="Login"
            fancy:fb_textColor="#C4C4C9"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:src="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Join Us"
        android:id="@+id/signUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/loginTV"
        android:padding="15dp"
        fancy:fb_textSize="20dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#D24958"
        fancy:fb_focusColor="#683045"
        fancy:fb_radius="10dp"
        fancy:fb_text="Join us"
        fancy:fb_textColor="#C4C4C9"
        android:visibility="visible"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/login"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:padding="15dp"
        fancy:fb_textSize="20dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#D24958"
        fancy:fb_focusColor="#683045"
        fancy:fb_radius="10dp"
        fancy:fb_text="Login"
        fancy:fb_textColor="#C4C4C9"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to join us ?"
        android:textSize="20dp"
        android:id="@+id/loginTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/login"
        android:textColor="#C4C4C9"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoName"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/logoname" />

</RelativeLayout>
</ScrollView>