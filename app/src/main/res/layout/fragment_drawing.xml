<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawingActivity">


    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/draw"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="15dp"
        fancy:fb_textSize="20dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#D24958"
        fancy:fb_focusColor="#683045"
        fancy:fb_radius="10dp"
        fancy:fb_text="Draw"
        fancy:fb_textColor="#C4C4C9"/>



    <com.example.nitishbhaskar.cherrypick.SimpleDrawingView
        android:id="@+id/simpleDrawingView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/clearButon"
        android:layout_below="@+id/draw"
        android:background="@drawable/bluebflyframe_patch"
        android:visibility="invisible"
        />


    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearButon"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        fancy:fb_textSize="20dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#D24958"
        fancy:fb_focusColor="#683045"
        fancy:fb_radius="10dp"
        fancy:fb_text="Clear"
        fancy:fb_textColor="#C4C4C9"
        android:visibility="invisible"/>





</RelativeLayout>
